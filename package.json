{
  "name": "@carllee1983/line-pay-online-v4",
  "version": "1.1.1",
  "description": "Official LINE Pay Online V4 API SDK for Node.js/Bun - Type-safe, zero dependencies, 100% test coverage",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/types/src/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/src/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/types/src/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun run build.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:ci": "bun test --coverage --coverage-threshold=100",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run typecheck && bun run lint && bun run test:ci && bun run build",
    "prepare": "simple-git-hooks"
  },
  "keywords": [
    "line",
    "line-pay",
    "linepay",
    "payment",
    "api",
    "sdk",
    "typescript",
    "nodejs",
    "bun",
    "taiwan",
    "japan",
    "thailand",
    "LINE Pay",
    "付款",
    "支付",
    "金流"
  ],
  "author": "Carl Lee <carllee1983@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CarlLee1983/line-pay-online-v4-node.git"
  },
  "bugs": {
    "url": "https://github.com/CarlLee1983/line-pay-online-v4-node/issues"
  },
  "homepage": "https://github.com/CarlLee1983/line-pay-online-v4-node#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/bun": "latest",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "simple-git-hooks": "^2.11.1",
    "lint-staged": "^15.2.10"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run test && bunx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
